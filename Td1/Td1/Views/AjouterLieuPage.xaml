<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Td1.Views.AjouterLieuPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nom du lieu"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Title}"/>

            <Label Text="Description du lieu"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Description}"/>

            <Label Text="Id de l'image du lieu (a faire depuis la galerie/appareil photo)"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding IdImage}"/>

            <Label Text="Latitude"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Latitude}"/>

            <Label Text="Longitude"
               HorizontalOptions="Center"/>
            <Entry Text="{Binding Longitude}"/>



            <Button Text="Ajouter le lieu " Command="{Binding AjouterLieuCommand}"/>
            <Button Text="Ajouter Une Image " Command="{Binding AjouterImageCommand}"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>