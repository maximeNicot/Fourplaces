<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Td1.Views.ListeLieuxPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding ImageUrl}"/>


            <ListView ItemsSource="{Binding ListeLieux}" SelectedItem="{Binding SelectedLieu}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal"
                                             Grid.Column="0"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalOptions="Center"
                                             >

                                <Image Source="{Binding ImageUrl}"/>
                                
                                <StackLayout Orientation="Vertical">
                                    <Label Text="{Binding Title }"  FontSize="15" FontAttributes="Bold"/>
                                    <Label Text="{Binding Description }" MaxLines="1"/>
                                </StackLayout>

                            </StackLayout>
                            
                        </ViewCell>
                       
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Voir mon profil" Command="{Binding ProfilPageCommand}"/>
            <Button Text="Ajouter un lieu" Command="{Binding AjouterUnLieuCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>