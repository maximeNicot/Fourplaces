<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Td1.Views.ListeLieuxPage">
    <ContentPage.Content>
        <StackLayout>

            <ListView ItemsSource="{Binding ListeLieux}" SelectedItem="{Binding SelectedLieu}">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding ImageLieu}"
                                   Text="{Binding NomLieu}"
                                   Detail="{Binding DetailLieu}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Voir mon profil" Command="{Binding ProfilPageCommand}"/>
            <Button Text="Ajouter un lieu" Command="{Binding AjouterUnLieuCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>